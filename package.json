{
    "name": "hero-engine",
    "version": "0.1.0",
    "description": "Open-source HTML5 adventure game engine",
    "main": "index.js",
    "scripts": {
        "test": "npm run eslint",
        "eslint": "./node_modules/.bin/eslint src",
        "eslint-fix": "./node_modules/.bin/eslint --fix src",
        "prettier-examples": "./node_modules/.bin/prettier --write 'examples/**/*.js'",
        "precommit": "npm run eslint-fix",
        "examples": "browser-sync start --server examples --serveStatic 'examples' --files 'examples/**/*' --directory --index index.html"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.js": [
            "npm run eslint-fix",
            "git add"
        ],
        "examples/**/*.js": [
            "npm run prettier-examples",
            "git add"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/CommandLineHeroes/hero-engine.git"
    },
    "keywords": [
        "adventure",
        "game",
        "engine"
    ],
    "author": "Command Line Heroes",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/CommandLineHeroes/hero-engine/issues"
    },
    "homepage": "https://github.com/CommandLineHeroes/hero-engine",
    "dependencies": {
        "phaser": "^3.12.0",
        "phaser-animated-tiles": "^2.0.2"
    },
    "devDependencies": {
        "babel-eslint": "^10.0.1",
        "browser-sync": "^2.24.7",
        "eslint": "^5.5.0",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-prettier": "^3.0.0",
        "http-server": "^0.11.1",
        "husky": "^1.1.2",
        "lint-staged": "^7.3.0",
        "prettier": "^1.14.3",
        "prettier-eslint": "^8.8.2"
    }
}
